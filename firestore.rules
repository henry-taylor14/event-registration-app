// FIRESTORE RULES

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ” Admins collection (only accessible to admin users)
    match /admin/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }

    // ğŸ‘¤ Users collection (each user can read their own user doc)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Prevent client-side writes unless needed
    }

    // ğŸ“… Events collection (anyone can read; only authenticated users can write)
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;

      // ğŸ‘¥ Groups subcollection (public read/create; restricted deletes updates)
      match /groups/{groupId} {
        allow read, create: if true;
        allow delete, update: if request.auth != null;

        // ğŸ§¾ Receipts subcollection (public read/write; restricted updates/deletes)
        match /receipts/{receiptId} {
          allow read, create: if true;
          allow update, delete: if request.auth != null;
        }
      }
    }
  }
}
