// FIRESTORE RULES

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admins collection
    match /admin/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Prevent client-side writes unless needed
    }

    // Events collection (public read; restricted write)
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;

      // Groups subcollection (public read/create; restricted deletes/updates)
      match /groups/{groupId} {
        allow read, create: if true;
        allow delete, update: if request.auth != null;

        // Receipts subcollection (public read/write; restricted updates/deletes)
        match /receipts/{receiptId} {
          allow read, create: if true;
          allow update, delete: if request.auth != null;
        }
      }
    }
  }
}
